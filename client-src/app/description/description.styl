@import "../stylus/common.styl";
@import "../stylus/variables.styl";

.cv-description {
  color: black;
  order: 1;
  padding-right: 3rem;
  width: description-width;
}

@media all and (max-width:1280px) {
  .cv-decription {
    padding-top: 0;
  }
}

.cv-description__heading {
  color: capgemini-light-blue;
  font-family: 'Arial', sans-serif;
  font-size: small-kapitol-header;
  padding-top: 3rem;
  text-transform: uppercase;
}

.cv-description__name {
  color: capgemini-dark-blue;
  display: inline;
  font-size: large-header;
}

.cv-description__photo {
  display: inline;
  height: 1.5rem;
  padding-left: 1rem;
  opacity: .5;
}
