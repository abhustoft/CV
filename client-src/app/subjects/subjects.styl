@import "../stylus/common.styl";
@import "../stylus/variables.styl";

.subjects-heading {
  color: capgemini-light-blue;
  font-size: small-header;
}

@media all and (max-width:1200px) {
  .subjects {
    flex-grow: 3;
  }

  .subjects-container {
    display: flex;
    flex-direction: column;
    max-height: 6rem;
    flex-wrap: wrap;
  }
}

@media all and (max-width:700px) {
  .subjects {
    flex-grow: 1;
  }

  .subjects-container {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    max-height: 3000rem;
  }
}
